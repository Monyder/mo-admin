<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mon.sof.project.common.sysInfoSet.mapper.SysInfoSetMapper">
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="mon.sof.project.common.sysInfoSet.entity.SysInfoSet">
        <id column="id" property="id"/>
        <result column="code" property="code"/>
        <result column="name" property="name"/>
        <result column="is_sys" property="isSys"/>
        <result column="character_set" property="characterSet"/>
        <result column="remark" property="remark"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <select id="queryByMultiTable" parameterType="map" resultMap="BaseResultMap">
        <include refid="com.sof.mapper.base.conditionSql"/>
    </select>

    <update id="createTable" parameterType="mon.sof.project.common.sysInfoSet.entity.SysInfoSet">
        <![CDATA[
            CREATE TABLE ${sysInfoSet.code} (
              `id` BIGINT(20) NOT NULL AUTO_INCREMENT COMMENT '主键',
              PRIMARY KEY (`id`)
            ) ENGINE=InnoDB DEFAULT CHARSET= '${sysInfoSet.characterSet}'
        ]]>
        <![CDATA[
            COMMENT '${sysInfoSet.remark}'
        ]]>
</update>

    <update id="dropTable" parameterType="string">
        DROP TABLE IF EXISTS ${code}
    </update>
</mapper>
